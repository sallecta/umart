                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">COM_UMART_YES</option>
                <option value="0">COM_UMART_NO</option>
            </field>
            <field
                    name="search_default_ordering"
                    type="UmartSort"
                    label="COM_UMART_DEFAULT_ORDERING"
                    default=""/>
            <field
                    name="search_default_limit"
                    type="text"
                    label="COM_UMART_DEFAULT_LIMIT"
                    default=""/>
