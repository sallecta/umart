        <fieldset
                name="basic"
                label="COM_UMART_RESULTS_DISPLAY"
                addfieldpath="/administrator/components/com_umart/models/fields">
            <field
                    name="show_search_filter_bar"
                    type="list"
                    label="COM_UMART_SHOW_FILTER_BAR"
                    default="">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">COM_UMART_YES</option>
                <option value="0">COM_UMART_NO</option>
            </field>
            <field
                    name="show_search_toggle_button"
                    type="list"
                    label="COM_UMART_SHOW_TOGGLE_BUTTON"
                    default=""
