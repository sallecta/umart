<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="easyshoppayment" method="upgrade">
    <name>plg_easyshoppayment_offline</name>
    <author>JoomTech team</author>
    <creationDate>OCT 2017</creationDate>
    <copyright>Copyright (C) 2015 - 2020 JoomTech. All rights reserved.</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <authorEmail>contact@joomtech.net</authorEmail>
    <authorUrl>www.joomtech.net</authorUrl>
    <version>1.4.1</version>
    <description>PLG_EASYSHOPPAYMENT_OFFLINE_DESCRIPTION</description>
    <files>
        <filename plugin="offline">offline.php</filename>
        <filename>bank-transfer.png</filename>
        <filename>card.png</filename>
        <filename>cash-on-delivery.png</filename>
        <folder>language</folder>
        <folder>layouts</folder>
    </files>
    <easyshop>
        <fields name="params">
            <fieldset
                    name="payment_setting"
                    label="COM_EASYSHOP_PAYMENT_SETTING">
                <field name="is_card" type="hidden" value="1"/>
                <field
                        name="offline_type"
                        type="list"
                        label="PLG_EASYSHOPPAYMENT_OFFLINE_TYPE"
                        description="PLG_EASYSHOPPAYMENT_OFFLINE_TYPE_DESC"
                        class="uk-select"
                        default="cod">
                    <option value="cod">PLG_EASYSHOPPAYMENT_OFFLINE_CASH_ON_DELIVERY</option>
                    <option value="bank_transfer">PLG_EASYSHOPPAYMENT_OFFLINE_BANK_TRANSFER</option>
                    <option value="collect_card">PLG_EASYSHOPPAYMENT_OFFLINE_COLLECT_CARD</option>
                </field>
                <field
                        name="card_show_holder_name"
                        type="switcher"
                        label="COM_EASYSHOP_SHOW_CARD_HOLDER_NAME"
                        default="1"
                        filter="intval"
                        showon="offline_type:collect_card">
                    <option value="1">COM_EASYSHOP_YES</option>
                    <option value="0">COM_EASYSHOP_NO</option>
                </field>
                <field
                        name="accepted_cards"
                        type="card"
                        label="COM_EASYSHOP_ACCEPTED_CARDS"
                        description="COM_EASYSHOP_ACCEPTED_CARDS_DESC"
                        class="uk-select"
                        multiple="true"
                        showon="offline_type:collect_card"/>
            </fieldset>
        </fields>
    </easyshop>
</extension>
