            <option value="0">JNO</option>
        </field>
        <field
                name="search_default_ordering"
                type="EasyshopSort"
                label="COM_EASYSHOP_DEFAULT_ORDERING"
                class="uk-select"
                default=""
        />
        <field
                name="search_default_limit"
                type="text"
                label="COM_EASYSHOP_DEFAULT_LIMIT"
                class="uk-input"
                default="15"
                filter="intval"
