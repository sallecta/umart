                rows="5"
                default="{shop_name} {shop_address_1}, {shop_postcode}, {shop_city}, {shop_country}"
                filter="safehtml"
                class="uk-textarea"
        />
        <field
                name="shop_description"
                type="textarea"
                label="COM_EASYSHOP_DESCRIPTION"
                cols="50"
                rows="15"
                filter="safehtml"
                class="uk-textarea"
        />
