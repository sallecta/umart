                type="usergrouplist"
                label="COM_EASYSHOP_ACTION_ADD_VIEW_PRICE"
                description="COM_EASYSHOP_ACTION_VIEW_PRICE_DESC"
                multiple="true"
        />
        <field
                name="groups_can_add_to_cart"
                type="usergrouplist"
                label="COM_EASYSHOP_ACTION_ADD_TO_CART"
                description="COM_EASYSHOP_ACTION_ADD_TO_CART_DESC"
                multiple="true"
        />
    </fieldset>
    <fieldset
            name="shop"
            label="COM_EASYSHOP_SHOP"
    >
