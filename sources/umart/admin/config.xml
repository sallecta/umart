                name="order_code_format"
                type="text"
                label="COM_EASYSHOP_ORDER_CODE_FORMAT"
                class="uk-input"
                default="{random:7}"
        />
        <field
                name="notification_orders_number"
                type="number"
                label="COM_EASYSHOP_NOTIFICATION_ORDERS_NUMBER"
                description="COM_EASYSHOP_NOTIFICATION_ORDERS_NUMBER_DESC"
                class="uk-input"
                min="5"
                step="1"
                max="20"
                default="10"
                filter="intval"
                showon="notification_seconds!:0[AND]notification_seconds!:"
        />
