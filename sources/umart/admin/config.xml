<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
            name="global"
            label="COM_EASYSHOP_CONFIG_GLOBAL"
            addfieldpath="/administrator/components/com_easyshop/models/fields"
    >
        <field
                name="list_limit"
                type="text"
                label="COM_EASYSHOP_LIST_LIMIT"
                description="COM_EASYSHOP_LIST_LIMIT_DESC"
                class="uk-input"
                default="15,25,50,75,100"
        />
        <field
                name="weight_unit"
                type="text"
                label="COM_EASYSHOP_PRODUCT_WEIGHT_UNIT"
                description="COM_EASYSHOP_PRODUCT_WEIGHT_UNIT_DESC"
                class="uk-input"
                cols="25"
                rows="5"
                default="kg,g,mg,lb,oz,ozt"
        />
        <field
                name="dimension_unit"
                type="text"
                label="COM_EASYSHOP_PRODUCT_DIMENSION_UNIT"
                description="COM_EASYSHOP_PRODUCT_DIMENSION_UNIT_DESC"
                class="uk-input"
                cols="25"
                rows="5"
                default="m,dm,cm,mm,in,ft,yd"
        />
        <field
                name="php_date_format"
                type="text"
                label="COM_EASYSHOP_PHP_DATE_FORMAT"
                class="uk-input"
                required="true"
                default="Y-m-d"
        />
        <field
                name="php_time_format"
                type="text"
                label="COM_EASYSHOP_PHP_TIME_FORMAT"
                class="uk-input"
                required="true"
                default="H:i:s"
        />
