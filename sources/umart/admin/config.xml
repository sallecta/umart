            <option value="1">COM_EASYSHOP_ZONE_DISPLAY_NAME_N_ENGLISH_NAME</option>
            <option value="2">COM_EASYSHOP_NAME</option>
            <option value="3">COM_EASYSHOP_ZONE_DISPLAY_ENGLISH_NAME</option>
        </field>

        <field
                name="country_flag_emoji"
                type="switcher"
                label="COM_EASYSHOP_COUNTRY_DISPLAY_FLAG_EMOJI"
                filter="intval"
                default="1"
