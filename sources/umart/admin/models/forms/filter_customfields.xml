<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_EASYSHOP_FILTER_SEARCH"
                description="COM_EASYSHOP_FILTER_SEARCH_DESC"
                class="uk-input"
                hint="JSEARCH_FILTER"/>
        <field
                name="published"
                type="list"
                label="COM_EASYSHOP_FILTER_PUBLISHED"
                class="uk-select"
                onchange="this.form.submit();">
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">COM_EASYSHOP_PUBLISHED</option>
            <option value="0">COM_EASYSHOP_UNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
                name="group_id"
                type="category"
                label="COM_EASYSHOP_GROUP"
                class="uk-select"
                extension="com_easyshop.product.customfield"
                onchange="this.form.submit();"
                required="true">
            <option value="">COM_EASYSHOP_GROUP_SELECT</option>
        </field>
        <field
                name="vendor_id"
                type="hidden"
                label="COM_EASYSHOP_VENDOR_SELECT"
                hint="COM_EASYSHOP_VENDOR_SELECT"
                onchange="this.form.submit();"
                default=""/>
    </fields>
    <fields name="list">
        <field type="hidden" name="fullordering"/>
        <field
                name="limit"
                type="limitbox"
                class="uk-select uk-width-small"
                default="25"
                label="COM_EASYSHOP_LIST_LIMIT"
                description="COM_EASYSHOP_LIST_LIMIT_DESC"
                onchange="this.form.submit();"/>
    </fields>
</form>
