<?xml version="1.0" encoding="utf-8"?>
<form>
    <field name="shipping_id" type="hidden" filter="intval"/>
    <field name="payment_id" type="hidden" filter="intval"/>
    <fields name="billing_address"/>
    <fields name="shipping_address"/>
    <fields name="registration">
        <field
                name="email"
                type="email"
                label="COM_EASYSHOP_YOUR_EMAIL"
                hint="COM_EASYSHOP_YOUR_EMAIL_HINT"
                class="uk-input uk-form-width-large"
                required="true"
                size="30"
                unique="true"
                validate="email"
                autocomplete="email"
        />
    </fields>
    <field
            name="note"
            type="textarea"
            label="COM_EASYSHOP_NOTE"
            hint="COM_EASYSHOP_NOTE_HINT"
            class="uk-textarea"
            cols="25"
            rows="2"
    />
    <field
            type="checkbox"
            name="address_different"
            value="1"
            default="0"
    />
    <fields name="confirm">
        <field
                type="checkbox"
                name="terms_and_conditions"
                label="COM_EASYSHOP_TERMS_AND_CONDITIONS_CONFIRM_NOTE"
                message="COM_EASYSHOP_TERMS_AND_CONDITIONS_CONFIRM_WARNING"
                class="uk-checkbox"
                labelclass="uk-display-inline"
                value="1"
                required="true"
        />
    </fields>
</form>