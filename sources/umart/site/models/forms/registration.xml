<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="registration">
        <field
                name="name"
                type="text"
                filter="string"
                label="COM_EASYSHOP_NAME"
                hint="COM_EASYSHOP_NAME"
                class="uk-input"
                required="true"
                size="30"
        />
        <field
                name="username"
                type="text"
                class="validate-username uk-input"
                label="COM_EASYSHOP_USERNAME"
                hint="COM_EASYSHOP_USERNAME"
                message="COM_EASYSHOP_PROFILE_USERNAME_MESSAGE"
                size="30"
                required="true"
                filter="username"
                validate="username"
        />
        <field
                name="password1"
                type="password"
                autocomplete="off"
                class="validate-password uk-input"
                label="COM_EASYSHOP_PROFILE_PASSWORD1"
                hint="COM_EASYSHOP_PROFILE_PASSWORD1"
                message="COM_EASYSHOP_PROFILE_PASSWORD1_DESC"
                filter="raw"
                size="30"
                required="true"
                validate="password"
        />
        <field
                name="password2"
                type="password"
                autocomplete="off"
                class="validate-password uk-input"
                field="password1"
                filter="raw"
                label="COM_EASYSHOP_PROFILE_PASSWORD2"
                hint="COM_EASYSHOP_PROFILE_PASSWORD2_DESC"
                message="COM_EASYSHOP_PROFILE_PASSWORD1_MESSAGE"
                size="30"
                required="true"
                validate="equals"
        />

        <field
                name="email1"
                type="email"
                filter="string"
                label="COM_EASYSHOP_PROFILE_EMAIL1"
                hint="COM_EASYSHOP_PROFILE_EMAIL1_DESC"
                message="COM_EASYSHOP_PROFILE_EMAIL1_MESSAGE"
                class="uk-input"
                required="true"
                size="30"
                validate="email"
                autocomplete="email"
        />
        <field
                name="email2"
                type="email"
                field="email1"
                filter="string"
                label="COM_EASYSHOP_PROFILE_EMAIL2"
                hint="COM_EASYSHOP_PROFILE_EMAIL2_DESC"
                message="COM_EASYSHOP_PROFILE_EMAIL2_MESSAGE"
                class="uk-input"
                required="true"
                size="30"
                validate="equals"
        />
    </fields>
</form>
